---
interface Props {
    href: string;
    variant?: "primary" | "outline";
    download?: boolean;
    class?: string;
    id?: string;
}

const {
    href,
    variant = "primary",
    download = false,
    class: className = "",
    id,
} = Astro.props;
---

<a
    href={href}
    class:list={[variant === "primary" ? "boton-cv" : "boton", className]}
    download={download ? "" : undefined}
    id={id}
>
    {
        variant === "primary" ? (
            <span class="lato-regular">
                <slot />
            </span>
        ) : (
            <span class="lato-regular">
                <slot />
            </span>
        )
    }
</a>

<style>
    /* Estilos extraídos de Hero.astro */
    .boton-cv {
        align-items: center;
        background-image: linear-gradient(
            144deg,
            #af40ff,
            #5b42f3 50%,
            #00ddeb
        );
        border: 0;
        border-radius: 0px;
        box-shadow: rgba(151, 65, 252, 0.2) 0 15px 30px -5px;
        box-sizing: border-box;
        color: #ffffff;
        display: flex;
        font-size: 20px;
        justify-content: center;
        line-height: 1em;
        max-width: 100%;
        min-width: 140px;
        padding: 3px;
        user-select: none;
        -webkit-user-select: none;
        touch-action: manipulation;
        white-space: nowrap;
        cursor: pointer;
        text-decoration: none;
    }

    .boton-cv:active,
    .boton-cv:hover {
        outline: 0;
    }

    .boton-cv span {
        background-color: rgb(5, 6, 45);
        border-radius: 0px; /* Aseguro que el interior también tenga bordes rectos si el padre los tiene */
        padding: 16px 24px;
        width: 100%;
        height: 100%;
        transition: 300ms;
        display: block; /* Para que ocupe todo el espacio */
    }

    .boton-cv:hover span {
        background: none;
    }

    @media (min-width: 768px) {
        .boton-cv {
            font-size: 24px;
            min-width: 196px;
        }
    }

    .boton {
        align-items: center;
        background-color: #fff;
        border-radius: 0px;
        box-shadow:
            transparent 0 0 0 3px,
            rgba(18, 18, 18, 0.1) 0 6px 20px;
        box-sizing: border-box;
        color: var(--color-azul-oscuro);
        cursor: pointer;
        display: inline-flex;
        flex: 1 1 auto;
        font-size: 1.2rem;
        font-weight: 700;
        justify-content: center;
        line-height: 1;
        margin: 0;
        outline: none;
        padding: 1.2rem 1.44rem;
        text-align: center;
        text-decoration: none;
        transition:
            box-shadow 0.2s,
            -webkit-box-shadow 0.2s;
        white-space: nowrap;
        border: 0;
        user-select: none;
        -webkit-user-select: none;
        touch-action: manipulation;
    }

    .boton:hover {
        box-shadow:
            var(--color-azul-oscuro) 0 0 0 3px,
            transparent 0 0 0 0;
    }

    /* Variante oscura para los botones outline */
    :global(body.dark-mode) .boton {
        background-color: #05062d;
        box-shadow:
            transparent 0 0 0 3px,
            rgba(255, 255, 255, 0.1) 0 6px 20px;
        color: #fff;
    }

    :global(body.dark-mode) .boton:hover {
        box-shadow:
            #fff 0 0 0 3px,
            transparent 0 0 0 0;
    }
</style>
