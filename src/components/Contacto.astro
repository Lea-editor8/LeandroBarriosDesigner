<style>
    .custom-box-shadow {
        box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
    }
    body.dark-mode .custom-box-shadow { 
        box-shadow: rgb(11, 6, 59) 0px 7px 29px 0px; 
    }
    .fondo-me {
        background: rgb(255, 255, 255);
    }
    body.dark-mode .fondo-me { 
