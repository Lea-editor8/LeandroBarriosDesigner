---
import Card from "./ui/Card.astro";
import { Image } from "astro:assets";
import mail from "../assets/imagenes/mail.svg";
import point from "../assets/imagenes/point.svg";
import whatsapp from "../assets/imagenes/whatsapp.svg";
---

<section
    id="contact"
    class="py-16 px-6 md:px-8 h-[575px] animate flex flex-col justify-center"
>
    <h2 class="text-4xl lato-black text-center mb-12">Contacto</h2>
    <Card class="max-w-xl mx-auto p-12 w-full">
        <h3 class="text-2xl lato-regular mb-6 text-center">
            ¡Hablemos de tu proyecto!
        </h3>
        <div class="flex flex-col items-center space-y-4">
            <div class="flex items-center justify-center space-x-2 mb-3">
                <Image src={mail} alt="Email" class="w-7 h-7" />
                <p class="lato-regular text-base md:text-lg">
                    leandrobarriospintos90@gmail.com
                </p>
            </div>
            <div class="flex items-center space-x-2 mb-3">
                <Image src={point} alt="Ubicación" class="w-7 h-7" />
                <p class="lato-regular text-base md:text-lg">
                    Buenos Aires, Argentina
                </p>
            </div>
            <div class="flex items-center space-x-2 mb-3">
                <Image src={whatsapp} alt="WhatsApp" class="w-7 h-7" />
                <p class="text-[16px] tracking-[0.02em] lato-bold">
                    <a
                        href="https://wa.link/h52bgn"
                        target="_blank"
                        class="hover:text-green-500 transition duration-300"
                    >
                        +54 9 11 6023-0521
                    </a>
                </p>
            </div>
        </div>
    </Card>
</section>
