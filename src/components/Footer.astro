<style>
        .corazon {
            width: 24px;
            height: 24px;
            background-color: rgb(255, 255, 255);
            position: relative;
            transform: rotate(-45deg);
            animation: latido 1s infinite;
        }

        .corazon::before,
        .corazon::after {
            content: "";
            width: 24px;
            height: 24px;
            background-color: rgb(255, 255, 255);
            border-radius: 50%;
            position: absolute;
        }

        .corazon::before {
            top: -12px;
            left: 0;
        }

        .corazon::after {
            top: 0;
            left: 12px;
        }

        @keyframes latido {
            0%, 100% {
                transform: rotate(-45deg) scale(1);
            }
            50% {
                transform: rotate(-45deg) scale(1.2);
            }
        }

        .centrado {
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .degradado {
            background: var(--gradient-1);
        }
</style>