---
import { Image } from "astro:assets";
import whatsapp from "../assets/imagenes/whatsapp.svg";

// Puedes pasarle props si querés hacerlo más dinámico
const { label = "Disponible", href = "https://wa.link/h52bgn" } = Astro.props;
---

<a
  href={href}
  target="_blank"
  class="fixed bottom-6 right-4 z-50 hover:scale-125 active:scale-125 focus:scale-125 px-4 py-3 flex items-center gap-2 transition-all duration-300"
>
  <Image src={whatsapp} alt="Whatsapp" class="w-12 h-12" />
</a>
